<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_add_subject"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
   android:background="@color/transparente"
    android:paddingBottom="2dp"
    android:paddingLeft="5dp"
    android:paddingTop="4dp" >

    <EditText
        android:id="@+id/add_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.42"
        android:gravity="center_vertical"
        android:hint="insert a subject"
        android:maxLength="20"
        android:visibility="invisible"
        android:tag="subject" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp" >

        <ImageView
            android:id="@+id/bt_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:background="#39bf2b"
            android:tag="39bf2b"
            android:contentDescription="color for select"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="btEditColor"
            android:visibility="invisible"
            android:src="@drawable/bt_edit_color" />

        <ImageView
            android:id="@+id/bt_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="bt for add new note"
            android:gravity="center_vertical"
            android:onClick="createItem"
            android:src="@drawable/bt_add_off" />
    </LinearLayout>

</LinearLayout>