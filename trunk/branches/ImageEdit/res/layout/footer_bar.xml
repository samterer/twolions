<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@drawable/footer_bar"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/cancel"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:onClick="onCancelClick"
        android:src="@drawable/ico_nariz"
        android:text="Cancel" />

    <ImageView
        android:id="@+id/change"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:onClick="swithCamera"
        android:src="@drawable/ico_flip_camera"
        android:text="Change" />

    <ImageView
        android:id="@+id/snap"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/change"
        android:layout_alignBottom="@+id/change"
        android:layout_centerHorizontal="true"
        android:onClick="onSnapClick"
        android:src="@drawable/ico_camera"
        android:text="Take" />

</RelativeLayout>