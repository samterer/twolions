<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bar_down"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/cinza_c"
    android:layout_gravity="bottom"
    android:shrinkColumns="3" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:gravity="center">

        <ImageView
            android:id="@+id/bt_left_down"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:paddingRight="25dp"
            android:onClick="btBarDownLeft" />

        <ImageView
            android:id="@+id/bt_center_down"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:onClick="btBarDownCenter" />

        <ImageView
            android:id="@+id/bt_right_down"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
             android:paddingLeft="25dp"
            android:onClick="btBarDownRight" />
    </TableRow>

</TableLayout>