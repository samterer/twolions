<?xml version = "1.0" encoding = "utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_menu"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="bottom"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/btLaranja"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/laranja_note"
        android:src="@drawable/boxe"
        android:tag="@color/laranja_note" />

    <ImageView
        android:id="@+id/btAzulClaro"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/rosa_note"
        android:src="@drawable/boxe"
        android:tag="@color/rosa_note" />

    <ImageView
        android:id="@+id/btRoxo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/azul_note"
        android:src="@drawable/boxe"
        android:tag="@color/azul_note" />

    <ImageView
        android:id="@+id/btVerdeClaro"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/vermelho_note"
        android:src="@drawable/boxe"
        android:tag="@color/vermelho_note" />

</LinearLayout>