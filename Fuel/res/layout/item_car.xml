<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frameLayout"
    android:layout_width="fill_parent"
    android:layout_height="150dp"
    android:layout_gravity="left|center_vertical"
    android:background="@drawable/item_car" >

    <!-- Layout com Imagem do Carro, Nome e Descrição -->

    <LinearLayout
        android:id="@+id/item_car"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="12dp"
        android:gravity="center_vertical"
        android:minHeight="40dp"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:visibility="visible" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <!-- Imagem do carro -->

            <ImageView
                android:id="@+id/tipo"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_gravity="center|center_vertical" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical" >

            <!-- Nome do Carro -->

            <TextView
                android:id="@+id/nome"
                style="@style/texto28"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/preto"
                android:textStyle="bold"
                android:typeface="monospace" />
            <!-- Descrição -->

            <TextView
                android:id="@+id/placa"
                style="@style/texto12"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/preto"
                android:typeface="monospace" />
        </LinearLayout>
    </LinearLayout>

    <!-- Seta na Direita -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:gravity="right|center_vertical" >

        <ImageView
            android:id="@+id/seta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:gravity="right|center_vertical"
            android:src="@drawable/seta_direita"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tb_edicao"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:gravity="center|center_vertical"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/bt_edit"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:onClick="editCar"
            android:src="@drawable/bt_edit" />

        <ImageView
            android:id="@+id/bt_delete"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:onClick="deleteConConfirm"
            android:src="@drawable/bt_delete" />
    </LinearLayout>

</FrameLayout>