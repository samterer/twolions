<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.maboo.fuellist"
    android:versionCode="2"
    android:versionName="1.1" >

    <uses-sdk android:minSdkVersion="8" />

    <application
        android:configChanges="orientation|keyboardHidden"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".screens.ListCarScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="orientation"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Tela de About -->
        <activity
            android:name=".screens.AboutScreen"
            android:label="AboutScreen"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
        
        <!-- Tela de edição\adição do carro -->
        <activity
            android:name=".screens.FormCarScreen"
            android:label="FormCarScreen"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
        
        <!-- Tela de edição dos itens -->
        <activity
            android:name=".screens.FormItemScreen"
            android:label="FormItemScreen"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
        
        <!-- Lista de itens -->
        <activity
            android:name=".screens.ListItemScreen"
            android:label="ListLogScreen"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
        
        <!-- Tela de visualização do item -->
        <activity
            android:name=".screens.ViewItemScreen"
            android:label="ViewItemScreen"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
        
        <!-- Tela de relatório -->
        <activity
            android:name=".screens.ReportScreen"
            android:label="ReportScreen"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
        
        <!-- Tela de configurações -->
        <activity
            android:name=".screens.SettingsScreen"
            android:label="Settings"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
    </application>

</manifest>